<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailhome.DetailHomeActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="33dp"

        android:elevation="8dp"
        android:layout_marginLeft="19dp"
        android:onClick="back"


        android:background="@drawable/round_bg"
        android:padding="7dp"
        app:tint="@color/text1"
        android:src="@drawable/ic_baseline_arrow_back_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
      android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="15dp"

          app:tint="@color/black"
          android:src="@drawable/ic_baseline_location_"/>




      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Mahad"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="18sp"
          android:id="@+id/city"
          android:padding="5dp"
          android:layout_marginLeft="8dp"
          android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp"

 >

      <com.smarteist.autoimageslider.SliderView
          android:id="@+id/imageSlider"
          android:layout_width="match_parent"
          android:layout_height="220dp"

          app:sliderAutoCycleDirection="back_and_forth"
          app:sliderAutoCycleEnabled="true"

          app:sliderIndicatorGravity="center_horizontal|bottom"
          app:sliderIndicatorMargin="15dp"
          app:sliderIndicatorOrientation="horizontal"
          app:sliderIndicatorPadding="3dp"
          app:sliderIndicatorRadius="1.5dp"
          app:sliderIndicatorSelectedColor="@color/colorPrimaryDark"
          app:sliderIndicatorUnselectedColor="#FFF"

          app:sliderStartAutoCycle="true" />

    </androidx.cardview.widget.CardView>



<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:text="Rent : 5000/-"
  android:textStyle="bold"
    android:id="@+id/line1"
  android:textSize="18sp"
    android:paddingLeft="5dp"
    android:textIsSelectable="true"

    android:layout_margin="15dp"
  android:textColor="@color/colorPrimary"/>



    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:textSize="15.5sp"
        android:id="@+id/line2"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textIsSelectable="true"

        android:text="1BHK (550sq ft)"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:textColor="@color/black"
        android:textIsSelectable="true"
        android:id="@+id/line3"
      android:layout_marginRight="20dp"
      android:text="Address : Floor - 2, Sneha Socity, 3CHH+PMX, Mahad, Raigad, 402301, Maharashtra\nLandmark : Boys Military Hostel"/>


      <TextView
          android:layout_width="match_parent"

          android:layout_height="wrap_content"
          android:textSize="15.5sp"
          android:layout_marginLeft="20dp"
          android:textColor="@color/black"
          android:layout_marginRight="20dp"
          android:textStyle="bold"
          android:layout_marginTop="20dp"
          android:textIsSelectable="true"

          android:text="Owner Details :"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="5dp"

          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:textColor="@color/black"
          android:textIsSelectable="true"
          android:id="@+id/owner"
          android:layout_marginRight="20dp"
          android:text="Owner Name : Mihir Shirgaonkar\nOwner Phone : 9960847974"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"

        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:gravity="center"
          android:id="@+id/call"
          android:layout_weight="1"
          android:padding="10dp"
          android:layout_height="wrap_content"
        >
        <ImageView
          android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/colorPrimary"
            android:src="@drawable/phone_call"
            />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Call Owner"
              android:fontFamily="@font/poppins_regular"
              android:textSize="13sp"
              android:layout_marginLeft="3dp"
              android:textColor="@color/colorPrimary"/>


        </LinearLayout>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                android:id="@+id/chat"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:padding="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/conversation"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="13sp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/colorPrimary"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


      <TextView
          android:layout_width="match_parent"

          android:layout_height="wrap_content"
          android:textSize="15.5sp"
          android:layout_marginLeft="20dp"
          android:textColor="@color/black"
          android:layout_marginRight="20dp"
          android:textStyle="bold"
          android:layout_marginTop="10dp"
          android:textIsSelectable="true"

          android:text="On Map :"/>



      <fragment
          android:id="@+id/google_maps"
          android:name="com.google.android.gms.maps.SupportMapFragment"
          android:layout_width="match_parent"
          android:layout_marginBottom="-10dp"
          android:layout_height="280dp"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_weight="1" />


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_marginRight="20dp"
          app:cardCornerRadius="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginBottom="35dp"
android:id="@+id/direction"
          android:layout_marginTop="20dp"
          android:layout_height="wrap_content"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">



              <LinearLayout
                  android:layout_width="match_parent"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:layout_height="wrap_content"
                  >
                  <ImageView
                      android:padding="10dp"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      app:tint="@color/colorPrimary"
                      android:src="@drawable/map"
                      />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Get Direction"
                      android:fontFamily="@font/poppins_regular"
                      android:textSize="13sp"
                      android:layout_marginLeft="3dp"
                      android:textColor="@color/colorPrimary"/>


              </LinearLayout>

          </LinearLayout>
      </androidx.cardview.widget.CardView>

  </LinearLayout>
</ScrollView>
</FrameLayout>
